<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.MotionBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ResultadoController">
    <children>
        <ImageView fitHeight="479.0" fitWidth="654.0" layoutX="-7.0" layoutY="-16.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Assets/softtech/pont.positiva.jpeg" />
            </image>
            <cursor>
                <Cursor fx:constant="WAIT" />
            </cursor>
            <effect>
                <MotionBlur />
            </effect>
        </ImageView>

        <Text fill="#f27c7c" layoutX="50.0" layoutY="98.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sua pontuação foi muito positiva, parabéns!">
            <font>
                <Font name="Arial Rounded MT Bold" size="24.0" />
            </font>
        </Text>

        <Label fx:id="scoreLabel" layoutX="244.0" layoutY="205.0" text="Pontuação" textFill="#8397f8">
            <font>
                <Font size="26.0" />
            </font>
        </Label>

        <Button fx:id="playAgainButton" layoutX="250.0" layoutY="292.0" mnemonicParsing="false" onAction="#handlePlayAgain" text="Jogar Novamente" />
    </children>
</AnchorPane>
